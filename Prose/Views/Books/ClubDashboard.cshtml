@model Prose.Models.ClubViewModels.ClubBookIndexViewModel

@{
    ViewData["Title"] = "ClubDashboard";
    Layout = "~/Views/Shared/_ClubLayout.cshtml";
}



@if (Model.Book == null)
{
<div class="d-flex justify-content-between">
    <div>
        <h4>Club Info</h4>
        <p>@Model.Club.Description</p>
        <h4>Meeting Info</h4>
        <p>@Model.Club.Name meets @Model.Club.MeetingFrequency</p>
    </div>
    <div>
        <h2>Current Book</h2>
        <p>No book has been selected to currently read</p>
    </div>
</div>
}
else
{
    <div class="d-flex justify-content-between">
        <div>
            <h4>Club Info</h4>
            <p>@Model.Club.Description</p>
            <h4>Meeting Info</h4>
            <p>@Model.Club.Name meets @Model.Club.MeetingFrequency.ToLower()</p>
        </div>
        <div>
            <h2>Current Book</h2>
            <table class="table">
                <tbody>
                    <tr>
                        <td>
                            <img href="@Model.Book.Image" alt="Image for @Model.Book.Title"/>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => modelItem.Book.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => modelItem.Book.Author)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => modelItem.Book.Details)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => modelItem.Book.CurrentlyReading)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@Model.Book.BookId">Edit</a> |
                            <a asp-action="Details" asp-route-id="@Model.Book.BookId">Details</a> |
                            <a asp-action="Delete" asp-route-id="@Model.Book.BookId">Delete</a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
}
